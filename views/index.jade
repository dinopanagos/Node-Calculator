html
  head
    title Calculator Project
    link(href='mystyle.css', rel='stylesheet')
  body
    form(name='calculator')
      input(type='textfield', name='ans', value='')
      br
      input#one(type='button', value='1', onclick='document.calculator.ans.value+=\'1\'')
      input#two(type='button', value='2', onclick='document.calculator.ans.value+=\'2\'')
      input#three(type='button', value='3', onclick='document.calculator.ans.value+=\'3\'')
      input#plus(type='button', value='+', onclick='document.calculator.ans.value+=\'+\'')
      br
      input#four(type='button', value='4', onclick='document.calculator.ans.value+=\'4\'')
      input#five(type='button', value='5', onclick='document.calculator.ans.value+=\'5\'')
      input#six(type='button', value='6', onclick='document.calculator.ans.value+=\'6\'')
      input#minus(type='button', value='-', onclick='document.calculator.ans.value+=\'-\'')
      br
      input#seven(type='button', value='7', onclick='document.calculator.ans.value+=\'7\'')
      input#eight(type='button', value='8', onclick='document.calculator.ans.value+=\'8\'')
      input#nine(type='button', value='9', onclick='document.calculator.ans.value+=\'9\'')
      input#times(type='button', value='*', onclick='document.calculator.ans.value+=\'*\'')
      input#divide(type='button', value='/', onclick='document.calculator.ans.value+=\'/\'')
      br
      input#zero(type='button', value='0', onclick='document.calculator.ans.value+=\'0\'')
      input#reset(type='reset', value='Reset')
      input#equals(type='button', value='=', onclick='document.calculator.ans.value=eval(document.calculator.ans.value)')

